<T3DataStructure>
    <sheets>
        <!-- Sheet: Settings -->
        <sDEF>
            <ROOT>
                <sheetTitle>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_tab.settings</sheetTitle>
                <type>array</type>
                <el>

                    <!-- single event -->
                    <settings.singleEvent>
                        <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.singleEvent</label>
                        <config>
                            <type>group</type>
                            <allowed>tx_sfeventmgt_domain_model_event</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                    <default>
                                        <searchWholePhrase>1</searchWholePhrase>
                                    </default>
                                </suggest>
                            </wizards>
                        </config>
                    </settings.singleEvent>

                    <!-- Storage page -->
                    <settings.storagePage>
                        <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.storagePage</label>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <size>3</size>
                            <maxitems>50</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                </suggest>
                            </wizards>
                        </config>
                    </settings.storagePage>

                    <!-- recursive -->
                    <settings.recursive>
                        <label>LLL:EXT:core/Resources/Private/Language/locallang_general.xlf:LGL.recursive</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0">
                                    <label>LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.0</label>
                                    <value>0</value>
                                </numIndex>
                                <numIndex index="1">
                                    <label>LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.1</label>
                                    <value>1</value>
                                </numIndex>
                                <numIndex index="2">
                                    <label>LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.2</label>
                                    <value>2</value>
                                </numIndex>
                                <numIndex index="3">
                                    <label>LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.3</label>
                                    <value>3</value>
                                </numIndex>
                                <numIndex index="4">
                                    <label>LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.4</label>
                                    <value>4</value>
                                </numIndex>
                                <numIndex index="5">
                                    <label>LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.5</label>
                                    <value>250</value>
                                </numIndex>
                            </items>
                        </config>
                    </settings.recursive>

                    <!-- preview hidden records -->
                    <settings.previewHiddenRecords>
                        <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.previewHiddenRecords</label>
                        <description>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.previewHiddenRecords.description</description>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.previewHiddenRecords>

                </el>
            </ROOT>
        </sDEF>

        <!-- Sheet: Additional -->
        <additional>
            <ROOT>
                <sheetTitle>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_tab.additional</sheetTitle>
                <type>array</type>
                <el>

                    <!-- Detail Pid -->
                    <settings.detailPid>
                        <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.detailPid</label>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                </suggest>
                            </wizards>
                        </config>
                    </settings.detailPid>

                    <!-- List Pid -->
                    <settings.listPid>
                        <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.listPid</label>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                </suggest>
                            </wizards>
                        </config>
                    </settings.listPid>

                    <!-- Registration Pid -->
                    <settings.registrationPid>
                        <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.registrationPid</label>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                </suggest>
                            </wizards>
                        </config>
                    </settings.registrationPid>

                    <!-- Payment Pid -->
                    <settings.paymentPid>
                        <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.paymentPid</label>
                        <config>
                            <type>group</type>
                            <allowed>pages</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                </suggest>
                            </wizards>
                        </config>
                    </settings.paymentPid>

                </el>
            </ROOT>
        </additional>

        <!-- Sheet: Template -->
        <template>
            <ROOT>
                <sheetTitle>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_tab.template</sheetTitle>
                <type>array</type>
                <el>

                    <!-- Template Layout -->
                    <settings.templateLayout>
                        <label>LLL:EXT:sf_event_mgt/Resources/Private/Language/locallang_be.xlf:flexforms_general.templateLayout</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <itemsProcFunc>DERHANSEN\SfEventMgt\Hooks\TemplateLayouts->user_templateLayout</itemsProcFunc>
                            <items>
                                <numIndex index="0">
                                    <label></label>
                                    <value></value>
                                </numIndex>
                            </items>
                        </config>
                    </settings.templateLayout>

                </el>
            </ROOT>
        </template>

    </sheets>
</T3DataStructure>
